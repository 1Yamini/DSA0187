#include <iostream>

// Inline function to calculate the area of a rectangle with default arguments
inline double calculateArea(double length = 1.0, double width = 1.0) {
    return length * width;
}

int main() {
    double length, width;

    // Get user input for the dimensions of the rectangle
    std::cout << "Enter the length of the rectangle: ";
    std::cin >> length;
    std::cout << "Enter the width of the rectangle: ";
    std::cin >> width;

    // Calculate the area using the calculateArea function and display the result
    std::cout << "Area of the rectangle: " << calculateArea(length, width) << std::endl;

    return 0;
}
