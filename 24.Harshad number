#include <iostream>
using namespace std;
int main()
{
    int a,r,s=0,temp;
    cout<<"enter the number: ";
    cin>>a;
    temp=a;
    while(a!=0)
    {
        r=a%10;
        s=s+r;
        a=a/10;
    }
    if(temp%s==0)
    {
        cout<<"Harshad number";
    }
    else
    {
        cout<<"not a harshad number";
    }
}
